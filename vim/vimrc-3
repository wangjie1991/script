    "-----------------------------------------------------------------  
    " plugin - NeoComplCache.vim    ......  
    "-----------------------------------------------------------------  
    let g:AutoComplPop_NotEnableAtStartup = 1  
    let g:NeoComplCache_EnableAtStartup = 1  
    let g:NeoComplCache_SmartCase = 1  
    let g:NeoComplCache_TagsAutoUpdate = 1  
